<nav class="side_nav">
  <% if @cart %>
    <div id="cart" class="carts">
      <%#= render_if @cart && @cart.line_items.any?, @cart %>
      <%= yield :cart %>
    </div>
  <% end %>
  <ul>
    <li> <%= link_to "Home", store_index_path %></li>
    <li><a href="/questions">Questions</a></li>
    <li><a href="/news">News</a></li>
    <li><a href="/contact">Contact</a></li>
    <li class="time"><%= Time.new.strftime("%Y-%m-%d %H:%M:%S") %></li>
    <li class="store_counter"> <%= yield :counter %> </li>
  </ul>

  <% if session[:user_id] %>
    <nav class="logged_in_nav">
      <ul>
        <li><%= link_to 'Orders', orders_path%> </li>
        <li><%= link_to 'Products', products_path %></li>
        <li><%= link_to 'Users', users_path %></li>
        <li><%= button_to 'Logout', logout_path, method: :delete%></li>
      </ul>
    </nav>
  <% else %>
    <div class="logged_in_nav">
      <%= button_to 'Login', login_path, method: :get%>
    </div>
  <% end %>
  <div class="top_list">
    <%= render 'layouts/top_list' %>
  </div>
</nav>