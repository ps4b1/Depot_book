<%content_for :cart do  %>
  <% if @cart && @cart.line_items.any?  %>
    <%= render partial: 'carts/cart', locals: {delete_last_redirect: false, cart: @cart}  %>
  <% end %>
<% end %>
<%content_for :counter do  %>
 Times visited: <%= @counter %>
<% end %>



<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Welcome to the store</h1>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <%= form_with url: line_items_path(product_id: product), method: :post, local: false do %>
            <%= image_submit_tag(product.image_url, alt:"#{product.title} book cover" , class: "image_button")%>
          <% end %>
          <h2><%= product.title %></h2>
          <p>
            <%= sanitize(product.description)  %>
          </p>
          <div class="price">
            <%= number_to_currency(product.price) %>
            <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
          </div>

        </li>
      <% end %>
    <% end %>
  <%end %>
</ul>