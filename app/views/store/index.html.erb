<%content_for :cart do  %>
  <% if @cart && @cart.line_items.any?  %>
    <%= render partial: 'carts/cart', locals: {delete_last_redirect: false, cart: @cart}  %>
  <% end %>
<% end %>
<%content_for :counter do  %>
 Times visited: <%= @counter %>
<% end %>



<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Welcome to the store</h1>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <%= link_to image_tag(product.image_url), line_items_path(product_id: product), class:"image_button", method: :post, remote: true%>
          <h2><%= product.title %></h2>
          <p>
            <%= sanitize(product.description)  %>
          </p>
          <div class="price">
            <%= number_to_currency(product.price) %>
            <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
            <%= button_to 'Rate', new_product_review_url(product_id: product), method: :get %>
            <% if product.reviews.any? %>
              <%= "Avarage rating: #{sprintf("%0.02f", product.reviews.average(:rating))}" %>
            <% end %>
          </div>

        </li>
      <% end %>
    <% end %>
  <%end %>
</ul>